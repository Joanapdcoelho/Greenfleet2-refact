			<db:sql><![CDATA[SELECT vehicle_id, brand, model, status
FROM accounts
WHERE id = :id
AND (:brand IS NULL OR brand = :brand)
AND (:model IS NULL OR model = :model)
AND (:status IS NULL OR status = :status);]]></db:sql>
