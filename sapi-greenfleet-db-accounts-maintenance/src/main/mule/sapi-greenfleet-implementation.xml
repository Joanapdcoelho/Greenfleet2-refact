	<flow name="postAccount" doc:id="7f2d9c89-37a2-4a21-be34-f8e831d48382" >
		<logger level="INFO" doc:name="Logger" doc:id="d8afba64-02f5-4a35-9194-b51da727b175" />
		<ee:transform doc:name="Transform Message" doc:id="bbc325fd-ffeb-44ec-b28d-6488e45d48c7" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
vars.info flatMap ((company) ->
    company.vehicles map ((vehicle) -> {
        id: company.id,
        name: company.name,
        industry: company.industry,
        country: company.country,
        vehicle_id: vehicle.id,
        brand: vehicle.brand,
        model: vehicle.model,
        status: vehicle.status
    })
)]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<db:bulk-insert doc:name="Bulk insert" doc:id="a91f7952-0ad9-4dc2-a75b-266304143404" config-ref="Database_Config" >
			<db:sql ><![CDATA[INSERT INTO accounts (id, name, industry, country, vehicle_id, brand, model, status)
VALUES (:id, :name, :industry, :country, :vehicle_id, :brand, :model, :status);]]></db:sql>
		</db:bulk-insert>
	</flow>
	<flow name="postMaintenance" doc:id="d3ece6f6-c4c1-4df9-aa7e-95082acb2c67" >
		<logger level="INFO" doc:name="Logger" doc:id="43dad27d-1ce6-4741-bd31-48cb97cc5234" />
		<ee:transform doc:name="Transform Message" doc:id="358db3e1-686c-4d11-9fb7-b5ed37a5a179" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
    id: payload.id,
    vehicleId: payload.vehicleId,
    description: payload.description,
    date: payload.date,
    status: payload.status
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<db:insert doc:name="Insert" doc:id="6e4f2583-9382-466b-93ab-d16a57152cf6" config-ref="Database_Config" >
			<db:sql ><![CDATA[INSERT INTO maintenance (id, vehicleId, description, date, status)
VALUES (:id, :vehicleId, :description, :date, :status);]]></db:sql>
			<db:input-parameters ><![CDATA[#[payload]]]></db:input-parameters>
		</db:insert>
	</flow>
	<flow name="PostPartnerAccounts">
		<set-variable
    variableName="accountsRows"
    value="#[payload.accountsRows default []]" />

  <set-variable
    variableName="maintenanceRows"
    value="#[payload.maintenanceRows default []]" />

  <db:bulk-insert doc:name="Insert Accounts" config-ref="Database_Config">
    <db:bulk-input-parameters><![CDATA[
      #[vars.accountsRows]
    ]]></db:bulk-input-parameters>
    <db:sql><![CDATA[
INSERT INTO accounts
(id, name, industry, country, vehicle_id, brand, model, status)
VALUES
(:id, :name, :industry, :country, :vehicle_id, :brand, :model, :status)
    ]]></db:sql>
  </db:bulk-insert>

  <db:bulk-insert doc:name="Insert Maintenance" config-ref="Database_Config">
    <db:bulk-input-parameters><![CDATA[
      #[vars.maintenanceRows]
    ]]></db:bulk-input-parameters>
    <db:sql><![CDATA[
INSERT INTO maintenance
(id, vehicleId, description, date, status)
VALUES
(:id, :vehicleId, :description, :date, :status)
    ]]></db:sql>
  </db:bulk-insert>

  <ee:transform>
    <ee:message>
      <ee:set-payload><![CDATA[
%dw 2.0
output application/json
---
{
  message: "Partner data ingested successfully",
  insertedAccounts: sizeOf(vars.accountsRows),
  insertedMaintenance: sizeOf(vars.maintenanceRows)
}
      ]]></ee:set-payload>
    </ee:message>
  </ee:transform>
</flow>


<flow name="weeklyMaintenanceCsvImplement" doc:id="3b460c05-e947-455b-bff1-426e8ce20282">
		<set-variable variableName="outputDir" value="C:/Github/Greenfleet2-refact/reports/" doc:name="outputDir"/>
  <set-variable variableName="fileName" value='#["maintenance_" ++ (now() as String {format: "yyyy-MM-dd_HH-mm-ss"}) ++ ".csv"]' doc:name="fileName"/>
  <set-variable variableName="reportDate" value='#[now() as String {format: "yyyy-MM-dd"}]' doc:name="reportDate"/>

  <set-variable value="#[vars.outputDir ++ vars.fileName]" doc:name="fullPath" doc:id="453a53e8-d9db-43f0-ae28-aade134d1a79" variableName="fullPath"/>
		<db:select doc:name="accounts and maintenance" config-ref="Database_Config">
    <db:sql><![CDATA[SELECT 
  a.vehicle_id AS vehicleId,
  a.brand AS brand,
  a.model AS model,
  m.status AS status,
  m.date AS lastService
  FROM accounts a
    JOIN maintenance m ON m.vehicleId = a.vehicle_id
      WHERE m.status IN ('maintenance', 'in progress', 'in maintenance')
      ORDER BY a.vehicle_id ASC;
      ]]>
    </db:sql>
  </db:select>

  <ee:transform doc:name="Transform Message">
    <ee:message>
      <ee:set-payload><![CDATA[%dw 2.0
output application/csv 
header=true, separator=";" 
---
payload map (row) -> {
  vehicleId: row.vehicleId,
  brand: row.brand,
  model: row.model,
  status: row.status,
  lastService: row.lastService
}]]></ee:set-payload>
    </ee:message>
  </ee:transform>
    
  <file:write doc:name="Write" config-ref="File_Config" path="#[vars.fullPath]">
</file:write>
</flow>

	
